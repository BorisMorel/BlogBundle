<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <parameters>
    <parameter key="imag.blog.notifier.class">imag\BlogBundle\Notifier\Notifier</parameter>
  </parameters>
  
  <services>
    <service id="imag.blog.notifier" class="%imag.blog.notifier.class%">
      <argument type="service" id="swiftmailer.mailer" />
      <argument>%imag.blog.notifier.params%</argument>
      <argument type="service" id="templating" />
    </service>
  </services>
</container>

